<h1>Editing <%= @student.first_name %> <%= @student.last_name %></h1>

<form action="/dojos/<%= @branch.id %>/students/<%= @student.id %>" method="post">
	<input type="hidden" name="_method" value="patch">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<p>First Name: <input type="text" name="first_name" value="<%= @student.first_name %>"></p>
	<p>Last Name: <input type="text" name="last_name" value="<%= @student.last_name %>"></p>
	<p>Email: <input type="text" name="email" value="<%= @student.email %>"></p>
	<p>Dojo:<select name="dojo">
				<% @dojos.each do |d| %>
		  			<option value="<%= d.branch %>"><%= d.branch %></option>
		 		<% end %>
			</select><br>
		<br>
	<input type="submit" value="Update">

</form><br>
<a href="/dojos">Home</a> | <a href="/dojos/<%= @branch.id %>/students/<%= @student.id %>">Show</a>
