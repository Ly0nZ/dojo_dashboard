<h1><%= @student.dojo.branch %>'s <%= @student.first_name %> <%= @student.last_name %></h1>

<h4>Email: <%= @student.email %></h4>

<h3>Cohort</h3>
<table>
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @cohort.each do |c| %>
		<tr>
			<td><%= c.first_name %></td>
			<td><%= c.last_name %></td>
			<td><%= c.email %></td>
			<td><a href="/dojos/<%= @dojo.id %>/students/<%= c.id %>">Show</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= c.id %>/edit"> Edit</a> |
				<form action="/dojos/<%= @dojo.id %>/students/<%= c.id %>" method="post">
				<input type="hidden" name="_method" value="delete">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"><input type="submit" value="Delete" class="submit"></form></td>
		</tr>
		<% end %>
	</tbody>
</table><br>
<a href="/dojos">Home</a> | <a href="/dojos/<%= @dojo.id %>/students/<%= @student.id %>/edit">Edit</a>